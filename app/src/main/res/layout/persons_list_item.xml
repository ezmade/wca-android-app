<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/app_avatar_small_width"
            android:layout_height="@dimen/app_avatar_small_width"
            app:cardCornerRadius="100dp"
            android:layout_marginStart="@dimen/app_small_margin"
            android:layout_marginTop="@dimen/app_small_margin"
            android:layout_marginEnd="@dimen/app_small_margin"
            android:layout_marginBottom="@dimen/app_small_margin" >

            <ImageView
                android:id="@+id/person_avatar"
                android:layout_width="@dimen/app_avatar_small_width"
                android:layout_height="@dimen/app_avatar_small_height"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/person_name"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/app_small_margin"
            android:layout_marginTop="@dimen/app_small_margin"
            android:layout_marginBottom="@dimen/app_small_margin"
            android:layout_weight="1"
            android:padding="@dimen/app_small_padding"
            android:textSize="@dimen/app_large_font_size" />

        <ImageButton
            android:id="@+id/btn_ChangeAct"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/app_small_margin"
            android:layout_marginEnd="@dimen/app_default_margin"
            android:layout_marginBottom="@dimen/app_small_margin"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_action_name" />

    </LinearLayout>

</LinearLayout>