<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Item of records field. -->
    <style name="record_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/app_large_font_size</item>
        <item name="android:layout_marginTop">@dimen/app_default_margin</item>
    </style>

    <style name="record_res">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/colorRes</item>
        <item name="android:textSize">@dimen/app_large_font_size</item>
        <item name="android:layout_marginTop">@dimen/app_default_margin</item>
    </style>


</resources>
